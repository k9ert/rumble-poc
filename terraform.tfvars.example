# OpenStack Authentication
# Get these from your Rumble Cloud dashboard
auth_url                      = "https://identity.us-west-1.rumble.cloud/v3"
application_credential_id     = "00000EXAMPLE000000000000"
application_credential_secret = "EXAMPLESECRETKEY"
region                        = "RegionOne"

# Cluster Configuration
# Using standard template: Standard-v2.0-k8s-calico-fc38_v1.24.16
cluster_name = "my-k8s-cluster"
keypair_name = "my-keypair"

# Node Configuration (minimum cluster: 1 master + 1 worker)
node_count   = 1
master_count = 1

# Environment
environment = "development"

